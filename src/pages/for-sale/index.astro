---
import { getCollection } from "astro:content";
import Document from "../../layouts/Document.astro";

const forSale = await getCollection("for-sale");
---

<Document>
  <ul>
    {
      forSale.map((item) => (
        <li>
          <h2>{item.data.title}</h2>
          <p>{item.data.price}</p>
          <ul>
            {item.data.photos.map((photo) => (
              <li>
                <img src={photo} />
              </li>
            ))}
          </ul>
          <p>{item.data.description}</p>
        </li>
      ))
    }
  </ul>
</Document>
