---
import { getCollection } from "astro:content";
import Article from "../layouts/Article.astro";

const forSale = await getCollection("for-sale");
const title = "for sale";
---

<Article title={title}>
  <h1>{title}</h1>
  <ul>
    {
      forSale.map((item) => (
        <li>
          <h2>{item.data.title}</h2>
          <p>{item.data.price}</p>
          <ul>
            {item.data.photos.map((photo) => (
              <li>
                <img src={photo} />
              </li>
            ))}
          </ul>
          <p>{item.data.description}</p>
        </li>
      ))
    }
  </ul>
</Article>
