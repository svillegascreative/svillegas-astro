---
import logo from "../assets/venn.svg?raw";
---

<section>
  <Fragment set:html={logo} />
  <h1>
    <span class="blue">The</span>
    <span class="blue">personal</span>
    <span class="blue">website</span>
    <span class="blue">of</span>
    <span class="teal">sylvia</span>
    <span class="teal">villegas</span>
  </h1>
</section>

<style>
  section {
    min-height: 100vh;
    position: relative;
    margin-inline-start: var(--s1);
    margin-block-end: var(--s5);

    svg {
      position: absolute;
      opacity: 0.05;
      color: var(--c-navy);
      stroke-width: 3px;
      height: 100%;
      width: 100%;
    }
  }

  h1 {
    font-size: min(27vh, 18vw);
    position: absolute;
    bottom: var(--s3);
    line-height: 0.68;
    max-width: 8ch;
    text-align: right;
    letter-spacing: -0.04em;

    .blue {
      color: var(--c-navy);
      text-shadow: 0 -1px 1px var(--c-navy-lighter);
    }

    .teal {
      color: var(--c-teal);
      text-shadow: 0 -1px 1px var(--c-teal-lighter);
    }
  }
</style>
