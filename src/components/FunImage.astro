---
const { alt, src } = Astro.props;
---

<figure>
  <img src={src} alt={alt} width="300" height="300" />
</figure>

<style>
  figure {
    display: inline-block;
    position: relative;
    aspect-ratio: 1/1;
    shape-outside: circle();
    margin: var(--s-1);

    &::before {
      position: absolute;
      content: "";
      inset: 0;
      border-radius: 50%;
      background-image: linear-gradient(
        to bottom,
        var(--c-teal-dark) 0,
        var(--c-navy) 50%,
        var(--c-violet) 100%
      );
      opacity: 0.4;
      mix-blend-mode: color;
    }

    img {
      filter: brightness(0.6) saturate(50%);
      border-radius: 50%;
      mix-blend-mode: color-burn;
    }

    &::after {
      position: absolute;
      content: "";
      top: 5%;
      left: -7%;
      width: 115%;
      height: 86%;
      border: 3px solid var(--c-navy);
      border-radius: 50%;
      transform: rotate(20deg);
    }
  }
</style>
