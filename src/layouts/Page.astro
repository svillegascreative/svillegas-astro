---
/**
 * Layout for most pages throughout the site.
 * @param title document title and default h1
 * @param h1 optional h1, if it doesn't match the document title
 * @param lede optional lede, if it comes from a content file. Use slot if it comes from HTML. It'll also populate OG description.
 * @param image optional image, for use as OG image
 */
import Document from "./Document.astro";

const { title, h1, lede, image } = Astro.props;
---

<Document title={title} description={lede} image={image}>
  <article>
    <header>
      <h1>{h1 || title}</h1>

      <!-- TODO: sort out something to solve this grossness -->
      <!-- 2 options for including lede: -->
      {lede && <p class="lede">{lede}</p>}
      <slot name="lede" />
    </header>

    <slot />
  </article>
</Document>

<style>
  article {
    display: grid;
    grid-template-columns: 1.618fr 1fr;
    grid-template-rows: 61.8dvh auto;
    grid-template-areas:
      "header header"
      "main   .";

    > * {
      grid-column: main;
    }
  }
  header {
    grid-area: header;
    justify-self: end;
  }
  h1 {
    --measure: 30ch;

    font-size: var(--s7);
    -webkit-text-stroke: 0.03em var(--color-text-heading);
    color: transparent;
    text-shadow: 0.06em 0.04em var(--color-highlight);
    margin-block-end: var(--s-1);
    text-align: right;
  }
</style>
