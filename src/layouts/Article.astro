---
/**
 * Convenience layout, for pages where the entire content is a single article.
 */

import Document from "../layouts/Document.astro";

const { title } = Astro.props;
---

<style>
  article {
    > * + * {
      margin-block-start: var(--s0);
    }
  }
</style>

<Document title={title}>
  <article>
    <slot />
  </article>
</Document>
