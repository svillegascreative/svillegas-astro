---
/**
 * Parent for all pages (preferrably used via other page layouts).
 */

import "../styles/styles.css";
import site from "../data/site.json";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import HomepageHero from "../components/HomepageHero.astro";

const { title } = Astro.props;
const pageUrl = Astro.url.pathname;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <meta name="description" content={site.description} />
    <meta property="og:title" content={site.og.title} />
    <meta property="og:url" content={site.og.url} />
    <meta property="og:description" content={site.og.description} />
    <meta property="og:image" content={site.og.image} />
    <meta property="twitter:title" content={site.twitter.title} />
    <meta property="twitter:description" content={site.twitter.description} />
    <meta property="twitter:image" content={site.twitter.image} />
    <meta property="twitter:card" content={site.twitter.card} />

    <title>{title ? `${title} | ` : ""}{site.title}</title>
  </head>

  <body>
    {pageUrl === "/" ? <HomepageHero /> : null}

    <div class="grid">
      <Header />

      <main id="main">
        <slot />
      </main>

      <Footer />
    </div>

    <!-- SVG filters for left border -->
    <svg xmlns="http://www.w3.org/2000/svg" version="1.1" height="0" width="0">
      <defs>
        <filter id="grit">
          <feTurbulence
            type="fractalNoise"
            id="turbulence"
            baseFrequency="0.99"
            numOctaves="4"></feTurbulence>
          <feDisplacementMap id="displacement" in="SourceGraphic" scale="500"
          ></feDisplacementMap>
        </filter>

        <filter id="grit2">
          <feTurbulence
            type="fractalNoise"
            id="turbulence"
            baseFrequency="0.7"
            numOctaves="2"></feTurbulence>
          <feDisplacementMap id="displacement" in="SourceGraphic" scale="60"
          ></feDisplacementMap>
        </filter>
      </defs>
    </svg>
  </body>
</html>

<style>
  body {
    --left-border-width: var(--s0);

    position: relative;
    background-color: var(--c-bg);
    margin-inline-start: var(--left-border-width);

    &::before,
    &::after {
      position: absolute;
      content: "";
      top: -1rem;
      bottom: 0;
      width: calc(var(--left-border-width) * 2);
      background: linear-gradient(
        to bottom,
        var(--c-teal),
        var(--c-navy),
        var(--c-violet)
      );
    }

    &::before {
      left: calc(var(--left-border-width) * -1.5);
      filter: url(#grit);
    }

    &::after {
      left: calc(var(--left-border-width) * -2);
      filter: url(#grit2);
    }
  }
  .grid {
    display: grid;
    grid-template-rows: auto 1fr auto;
    grid-template-areas:
      "header"
      "main"
      "footer";

    @media (min-width: 600px) {
      grid-template-columns: 4fr 1fr;
      grid-template-rows: 1fr auto;
      grid-template-areas:
        "main   header"
        "footer footer";
    }
  }

  main {
    grid-area: main;
    padding: 1rem 1rem 1rem var(--s1);
    min-height: 100vh;
  }
</style>
